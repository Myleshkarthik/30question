#include <stdio.h>
#include <math.h>
int main() 
{
    float principal, rate, time, simple_interest;
    printf("Enter Principle amount, Interest Rate, and Time (in years): ");
    scanf("%f %f %f", &principal, &rate, &time);

    simple_interest = (principal * rate * time) / 100;
    printf("Simple Interest: %.2f\n", round(simple_interest * 100) / 100);

    return 0;
}
